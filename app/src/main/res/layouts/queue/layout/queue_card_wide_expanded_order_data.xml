<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/table_column_padding">

  <LinearLayout
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="0.45"
      android:orientation="vertical"
      android:paddingEnd="@dimen/table_column_padding">

    <TextView
        android:id="@+id/productName"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="@dimen/text_smallmedium" />

    <TextView
        android:id="@+id/productPrice"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="@dimen/text_smallmedium" />
  </LinearLayout>

  <!-- TODO: For unknown reason both quantity and total price text color default to gray. -->

  <TextView
      android:id="@+id/quantity"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="0.2"
      android:gravity="center_horizontal"
      android:paddingStart="@dimen/table_column_padding"
      android:paddingEnd="@dimen/table_column_padding"
      android:textColor="@color/text_enabled"
      android:textSize="@dimen/text_smallmedium" />

  <TextView
      android:id="@+id/totalPrice"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="0.35"
      android:gravity="end"
      android:textColor="@color/text_enabled"
      android:textSize="@dimen/text_smallmedium" />
</TableRow>
