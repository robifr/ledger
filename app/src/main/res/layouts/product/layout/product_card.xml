<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/cardlist_margin"
    android:layout_marginBottom="@dimen/cardlist_margin"
    android:checkable="true"
    android:clickable="true"
    app:checkedIcon="@drawable/icon_check"
    app:rippleColor="?android:attr/colorControlHighlight"
    card_view:cardCornerRadius="@dimen/cardlist_corner_radius"
    card_view:cardElevation="@dimen/cardlist_elevation">

  <include
      android:id="@+id/normalCard"
      layout="@layout/product_card_normal" />
</com.google.android.material.card.MaterialCardView>
