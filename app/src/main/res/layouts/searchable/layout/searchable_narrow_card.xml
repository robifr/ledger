<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:rippleColor="?android:attr/colorControlHighlight"
    card_view:cardCornerRadius="@dimen/cardlist_corner_radius"
    card_view:cardElevation="@dimen/cardlist_elevation">

  <!--
    Note: Use constraint layout instead of linear one because we are required to ensure
      ellipsize works while having flexible width.
  -->
  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/searchable_narrow_constraintlayout"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical">

    <include
        layout="@layout/reusable_image_shapeable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- TODO: Make every cards have equal height, especially when the text multilined. -->
    <!--		<TextView android:id="@+id/text"-->
    <!--			android:layout_width="0dp"-->
    <!--			android:layout_height="wrap_content"-->
    <!--			android:paddingTop="5dp"-->
    <!--			android:paddingStart="@dimen/cardlist_padding"-->
    <!--			android:paddingEnd="@dimen/cardlist_padding"-->
    <!--			android:textStyle="bold"-->
    <!--			android:textSize="@dimen/text_smallmedium"-->
    <!--			android:maxLines="2"-->
    <!--			android:ellipsize="end"-->
    <!--			app:layout_constraintTop_toBottomOf="@id/constraintLayout"-->
    <!--			app:layout_constraintStart_toStartOf="parent"-->
    <!--			app:layout_constraintEnd_toEndOf="parent"/>-->

    <TextView
        android:id="@+id/description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/cardlist_padding"
        android:paddingEnd="@dimen/cardlist_padding"
        android:paddingBottom="@dimen/cardlist_padding"
        android:textSize="@dimen/text_smallmedium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text" />
  </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
