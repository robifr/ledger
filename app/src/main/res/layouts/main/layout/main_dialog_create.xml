<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

  <TextView
      android:id="@+id/title"
      style="@style/BottomSheetDialog.Title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/text_create_new" />

  <View
      android:layout_width="match_parent"
      android:layout_height="@dimen/stroke_width"
      android:layout_marginBottom="5dp"
      android:background="@color/stroke" />

  <com.google.android.material.button.MaterialButton
      android:id="@+id/createQueueButton"
      style="@style/BottomSheetDialog.MaterialButton"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/text_queue"
      android:textColor="?android:attr/textColor"
      app:icon="@drawable/icon_assignment_20" />

  <com.google.android.material.button.MaterialButton
      android:id="@+id/createCustomerButton"
      style="@style/BottomSheetDialog.MaterialButton"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/text_customer"
      android:textColor="?android:attr/textColor"
      app:icon="@drawable/icon_person_20" />

  <com.google.android.material.button.MaterialButton
      android:id="@+id/createProductButton"
      style="@style/BottomSheetDialog.MaterialButton"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/text_product"
      android:textColor="?android:attr/textColor"
      app:icon="@drawable/icon_sell_20" />
</LinearLayout>
