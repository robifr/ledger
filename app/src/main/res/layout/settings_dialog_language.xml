<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/space_large">

  <com.google.android.material.bottomsheet.BottomSheetDragHandleView
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

  <TextView
      android:id="@+id/title"
      style="@style/BottomSheetDialog.Title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/space_smallMedium"
      android:text="@string/settings_selectLanguage" />

  <TextView
      android:id="@+id/description"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/space_medium"
      android:layout_marginEnd="@dimen/space_medium"
      android:layout_marginBottom="@dimen/space_medium"
      android:gravity="center"
      android:text="@string/settings_selectLanguage_description"
      android:textColor="?colorOnSurfaceVariant"
      android:textSize="@dimen/text_small" />

  <com.google.android.material.divider.MaterialDivider
      style="@style/Divider"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

  <RadioGroup
      android:id="@+id/radioGroup"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingEnd="@dimen/space_medium">

    <!-- Radio buttons tag are based on `LanguageOption` enum. -->
    <RadioButton
        android:id="@+id/englishUsRadioButton"
        style="@style/BottomSheetDialog.RadioButton.RoundedRight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tag="ENGLISH_US"
        android:text="@string/enum_languageOption_englishUs" />

    <RadioButton
        android:id="@+id/indonesiaRadioButton"
        style="@style/BottomSheetDialog.RadioButton.RoundedRight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tag="INDONESIA"
        android:text="@string/enum_languageOption_indonesia" />
  </RadioGroup>
</LinearLayout>
