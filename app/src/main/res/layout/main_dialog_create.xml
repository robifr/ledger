<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/bottomdialog_paddingbottom">

  <com.google.android.material.bottomsheet.BottomSheetDragHandleView
      android:id="@+id/dragHandle"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

  <TextView
      android:id="@+id/title"
      style="@style/BottomSheetDialog.Title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/text_create_new" />

  <com.google.android.material.divider.MaterialDivider
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="5dp" />

  <com.google.android.material.button.MaterialButton
      android:id="@+id/createQueueButton"
      style="@style/BottomSheetDialog.Button"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/text_queue"
      app:icon="@drawable/icon_assignment" />

  <com.google.android.material.button.MaterialButton
      android:id="@+id/createCustomerButton"
      style="@style/BottomSheetDialog.Button"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/text_customer"
      app:icon="@drawable/icon_person"/>

  <com.google.android.material.button.MaterialButton
      android:id="@+id/createProductButton"
      style="@style/BottomSheetDialog.Button"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/text_product"
      app:icon="@drawable/icon_sell" />
</LinearLayout>
