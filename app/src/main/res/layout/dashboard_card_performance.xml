<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:strokeWidth="0dp">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:paddingStart="@dimen/cardlist_padding"
      android:paddingTop="15dp"
      android:paddingEnd="@dimen/cardlist_padding"
      android:paddingBottom="15dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_performance"
        android:textSize="@dimen/text_mediumlarge"
        android:textStyle="bold" />

    <include
        android:id="@+id/totalQueue"
        layout="@layout/dashboard_card_performance_overview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="@dimen/cardlist_item_margin" />

    <com.google.android.material.divider.MaterialDivider
        style="@style/Divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include
        android:id="@+id/activeCustomers"
        layout="@layout/dashboard_card_performance_overview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/cardlist_item_margin"
        android:layout_marginBottom="@dimen/cardlist_item_margin" />

    <com.google.android.material.divider.MaterialDivider
        style="@style/Divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include
        android:id="@+id/productsSold"
        layout="@layout/dashboard_card_performance_overview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/cardlist_item_margin" />
  </LinearLayout>
</com.google.android.material.card.MaterialCardView>
