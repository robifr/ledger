<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:strokeWidth="0dp">

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:clipToPadding="false"
      android:orientation="vertical"
      android:paddingStart="@dimen/cardlist_padding"
      android:paddingTop="15dp"
      android:paddingEnd="@dimen/cardlist_padding"
      android:paddingBottom="@dimen/cardlist_padding">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_performance"
        android:textSize="@dimen/text_mediumlarge"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/totalQueue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <WebView
        android:id="@+id/chart"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/totalQueue" />

    <!-- Button tags are based on `DashboardPerformance.Chart` enum. -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/incomeCardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="@dimen/cardlist_margin"
        android:clickable="true"
        android:focusable="true"
        android:tag="INCOME"
        app:cardForegroundColor="@color/card_foreground_selectable"
        app:layout_constraintEnd_toStartOf="@id/orderedProductsCardView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chart"
        app:strokeColor="@color/stroke_selectable"
        app:strokeWidth="@dimen/stroke_width">

      <include
          android:id="@+id/incomeCard"
          layout="@layout/dashboard_card_performance_selectable" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/orderedProductsCardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/cardlist_margin"
        android:layout_marginTop="15dp"
        android:clickable="true"
        android:focusable="true"
        android:tag="ORDERED_PRODUCTS"
        app:cardForegroundColor="@color/card_foreground_selectable"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/incomeCardView"
        app:layout_constraintTop_toBottomOf="@id/chart"
        app:strokeColor="@color/stroke_selectable"
        app:strokeWidth="@dimen/stroke_width">

      <include
          android:id="@+id/orderedProductsCard"
          layout="@layout/dashboard_card_performance_selectable" />
    </com.google.android.material.card.MaterialCardView>
  </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
