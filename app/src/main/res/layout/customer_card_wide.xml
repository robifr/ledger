<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/cardlist_margin"
    android:layout_marginBottom="@dimen/cardlist_margin"
    android:checkable="true"
    android:clickable="true"
    app:checkedIcon="@null"
    app:strokeWidth="0dp">

  <include
      android:id="@+id/normalCard"
      layout="@layout/customer_card_wide_normal" />

  <include
      android:id="@+id/expandedCard"
      layout="@layout/customer_card_wide_expanded"
      android:visibility="gone" />
</com.google.android.material.card.MaterialCardView>
